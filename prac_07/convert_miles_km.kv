BoxLayout
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: input_number
            font_size: 48
            multiline: False
            on_text: app.handle_convert()
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.25
            Button:
                text: "Up"
                on_press: app.handle_increment(1)
            Button:
                text: "Down"
                on_press: app.handle_increment(-1)
    # Button:
        # text: "Convert miles to km"
        # on_press: app.handle_convert()
    Label:
        id: output_km
        font_size: 48
        color: "yellow"